{
  "name": "mage-universe/framework",
  "keywords": [
    "omatech",
    "mage",
    "framework"
  ],
  "homepage": "https://github.com/mage-universe/framework",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Omatech",
      "email": "devel@omatech.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "lambdish/phunctional": "^2.1.0",
    "laravel/framework": "^11.x-dev",
    "vaimo/composer-patches": "^5.1.2"
  },
  "require-dev": {
    "brianium/paratest": "^7.4.3",
    "infection/infection": "^0.27.10",
    "mockery/mockery": "^1.6.7",
    "phpmd/phpmd": "^2.15",
    "phpunit/phpunit": "^10.5.11",
    "psalm/plugin-mockery": "^1.1",
    "psalm/plugin-phpunit": "^0.18.4",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.0.4",
    "symplify/easy-coding-standard": "^12.1.14",
    "vimeo/psalm": "^5.22.2",
    "orchestra/testbench": "^9.x-dev"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Mage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/psalm",
    "mess": "vendor/bin/phpmd src github phpmd.xml",
    "lint": "vendor/bin/ecs check",
    "lint:fix": "@lint --fix",
    "test:phpunit": "vendor/bin/paratest --processes=$(nproc) --display-warnings --display-deprecations --stop-on-warning",
    "test:infection": "vendor/bin/infection --threads=$(nproc) --skip-initial-tests --coverage=build --show-mutations --logger-github",
    "test": ["@test:phpunit", "@test:infection"]
  },
  "extra": {
    "patches": {
      "laravel/octane": {
        "src/ApplicationFactory.php": "patches/laravel/octane/ApplicationFactory.php.patch"
      }
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "vaimo/composer-patches": true
    }
  }
}
